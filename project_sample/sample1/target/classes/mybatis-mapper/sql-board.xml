<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.sample1.mapper.BoardMapper">
	
	<insert id="insertNotice" parameterType="hashmap">
	INSERT INTO T2_NOTICE_TBL 
	VALUES
	('1', #{nTitle}, #{nContent}, #{uId}, '0', '0', now(),now())
	</insert>
	
	<select id="selectNoticeList" parameterType="hashmap" 
	resultType="com.example.sample1.model.Board">
		SELECT *
		FROM T2_NOTICE_TBL
		WHERE 1=1  
		<if test="keyword != '' and keyword != null"> 
			AND (N_TITLE LIKE '%' || #{keyword} || '%'
				OR N_CONTENT LIKE '%' || #{keyword} ||'%')
		</if>
	</select>
		
	<select id="selectNoticeInfo" parameterType="hashmap" 
	resultType="com.example.sample1.model.Board">
		SELECT *
		FROM T2_NOTICE_TBL
		WHERE N_NO = #{nNo}
	</select>
	
	<delete id="deleteNotice" parameterType="hashmap">
		DELETE FROM T2_NOTICE_TBL
		WHERE N_NO = #{nNo}
	</delete>
	
	<update id="noticeCnt" parameterType="hashmap">
		UPDATE T2_NOTICE_TBL
		SET
			N_HITS = N_HITS + 1
		WHERE N_NO = #{nNo}
	</update>
	
	<update id="updateNotice" parameterType="hashmap">
		UPDATE T2_NOTICE_TBL
		SET
			N_TITLE = #{nTitle},
			N_CONTENT = #{nContent},
			F_UPDATE_TIME = SYSDATE
		WHERE N_NO = #{nNo}
	</update>
</mapper>